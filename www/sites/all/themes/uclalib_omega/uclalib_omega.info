name = UCLA Library Theme
description = A custom theme for UCLA Library based on the Omega 4.x framework.
base theme = omega
screenshot = screenshot.png
engine = phptemplate
core = 7.x
version = 7.x-1.2

; ========================================
; Core Stylesheet Overrides
; ========================================
stylesheets[all][] = css/modules/system/system.menus.theme.css
stylesheets[all][] = css/modules/site_alert/site-alert.css

; ========================================
; Icons and Fonts
; ========================================
stylesheets[all][] = icons/style.css
stylesheets[all][] = fonts/stylesheet.css

; ========================================
; Stylesheets
; ========================================
stylesheets[all][] = css/uclalib-omega.normalize.css
stylesheets[all][] = css/uclalib-omega.styles.css
stylesheets[all][] = css/uclalib-omega.no-query.css

; Disabled stylesheets
stylesheets[all][] = vertical-tabs.css



; ========================================
; Scripts
; ========================================
scripts[] = js/mobile-collapsible.js
scripts[] = js/mobile-collapsible-panel-pane-init.js
scripts[] = js/uclalib-omega.behaviors.js
scripts[] = js/mobile-nav.js
scripts[] = js/mobile-search.js

; ========================================
; Plugins
; ========================================
plugins[panels][layouts] = panels/layouts
plugins[panels][styles] = panels/styles

; ========================================
; Regions
; ========================================
regions[branding] = Branding
regions[header] = Header
regions[navigation] = Navigation
regions[highlighted] = Highlighted
regions[help] = Help
regions[content] = Content
regions[sidebar_first] = First Sidebar
regions[sidebar_second] = Second Sidebar
regions[footer] = Footer
